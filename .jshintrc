{
  // Expected globals and ignore warnings
  "globals": {
    
    // Mocha/Testing
    "describe": false,
    "it": false,
    "before": false,
    "beforeEach": false,
    "after": false,
    "afterEach": false,
    "sinon": false,
    "chai": false,
    "expect": false,
    "should": false
  },
  
  // Allows usage of delete
  "-W051": true,
  
  // for SiteCatalyst
  "-W060": true, 
  
  // Suppress warnings about comma-first coding style
  "laxcomma": true,
  
  // Suppress warnings about possible unsafe line breakings
  "laxbreak": true,
  
  // Suppresses warnings about the use of expressions where normally you would expect to see assignments or function calls
  "expr": true,
  
  // This option suppresses warnings about using [] notation when it can be expressed in dot notation: person['name'] vs. person.name.
  "sub": true,
  
  // Define globals exposed by modern browsers.
  "browser": true,

  // Force all variable names to use either camelCase style or UPPER_CASE
  // with underscores.
  "camelcase": true,

  // Requires you to always put curly braces around blocks in 
  // loops and conditionals
  "curly": true,
  
  // This options prohibits the use of == and != in favor of === and !==
  "eqeqeq": true,
  
  // Suppress warnings about == null comparisons.
  "eqnull": true,
  
  // Prohibit the use of immediate function invocations without 
  // wrapping them in parentheses
  "immed": true,
  
  // Require 2 spaces instead of tabs
  "indent": 2,
  
  // Define jQuery globals
  "jquery": true,
  
  // Prohibit use of a variable before it is defined.
  "latedef": true,
  
  // Limit the depth of blocks.
  // Break up your functions!
  "maxdepth": 5,
  
  // Limit the amount of params per function.
  // Use an options object instead of > 3 params.
  "maxparams": 3,

  // Limit the number of statements per function.
  // Break up your functions!
  "maxstatements": 25,

  // Require capitalized names for constructor functions.
  "newcap": false,
  
  // Defines node.js globals
  "node": true,
  
  // Enforce single quotes on strings
  "quotmark": "single",

  // Prohibit trailing whitespace.
  "trailing": true,
  
  // Prohibit use of explicitly undeclared variables.
  "undef": true,

  // Warn when variables are defined but never used.
  "unused": true
}
